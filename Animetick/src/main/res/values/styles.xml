<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AnimetickBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="MainTheme" parent="AnimetickBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MainTheme.AnimetickActionBar</item>
    </style>

    <style name="MainTheme.AnimetickActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/unwatch_button</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

</resources>
