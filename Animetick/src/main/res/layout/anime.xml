<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:longClickable="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/anime_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:longClickable="false"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/anime_detail_layout"
        android:background="@drawable/ticket_grad"
        android:layout_toLeftOf="@+id/anime_watch_button"
        android:paddingBottom="5dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/anime_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anime Title"
            android:id="@+id/anime_title"
            android:layout_alignTop="@+id/anime_icon"
            android:layout_toRightOf="@+id/anime_icon"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:text="Watch"
        android:id="@+id/anime_watch_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:background="@drawable/trans_watch_to_confirm"
        android:textColor="#FFFFFF"
        android:gravity="center|center_vertical"
        android:layout_alignBottom="@+id/anime_detail_layout"
        />

</RelativeLayout>
